include "include/map.inc"
include "include/marker.inc"
include "include/pioneer.inc"

window
(
    size [800 600]
    show_data 1
    #show_ranger_beams 1
)

floorplan
(
    bitmap "bitmaps/simple_rooms.png"
    size [20 20 1]
)

pioneer2dx
(
    name "pioneer1"
    pose [ 0 0 0 0 ]

    localization "odom"
    odom_error [ 0.05 0.05 0.0 0.1 ]   	# Odometry error or slip in X, Y and Theta
                                   	    # (Uniform random distribution)
    color "blue"
)

marker
(
    name "marker1"
    pose [-2 -1.5 0 0]
)
